<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.26"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/ble_device_item_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DeviceName" />

        <TextView
            android:id="@+id/ble_device_item_mac_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MACアドレス" />

        <TextView
            android:id="@+id/ble_device_item_rssi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RSSI" />

        <TextView
            android:id="@+id/ble_device_item_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read" />

    </LinearLayout>
    <Button
        android:id="@+id/ble_device_item_toggle"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="Connect"/>
</LinearLayout>